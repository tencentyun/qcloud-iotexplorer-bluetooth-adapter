{
	"include": [
		"src",
		"global.d.ts"
	],
	"compilerOptions": {
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es2017"
		],
    "types": [
      "miniprogram-api-typings"
    ],
		"rootDir": "src",
    "skipLibCheck": true,
		"declaration": true,
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true
	}
}
